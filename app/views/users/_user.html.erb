<div id="services">
  <div class="col-lg-3 col-sm-6">
    <div class="card hovercard">
      <div class="cardheader">
        <%= image_tag "bguser_infor.jpg", alt: t("alt") %>
      </div>
      <div class="avatar">
        <%= gravatar_for @user %>
      </div>
      <div class="info">
        <div class="title">
          <%= link_to @user.name, @user %>
        </div>
        <div class="desc">
          <%= t "user_infor.followed" %>
          </br>
          <strong><%= link_to t("count"), "#" %></strong>
        </div>
        <div class="desc">
          <%= t "user_infor.follower" %>
          <br />
          <strong><%= link_to t("count"), "#" %></strong>
        </div>
      </div>
      <div class="clear"></div>
      <div class="bottom">
        <span class="btn btn-success btn-lg">
          <i class="glyphicon glyphicon-ok"></i>
          <%= t "user_infor.follow" %>
        </span>
      </div>
    </div>
  </div>
</div>
